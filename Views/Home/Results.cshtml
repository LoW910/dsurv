@model DojoSurvey.Models.Survey


<div class="text-center">

    <div class="container">
        <div class="form-group">
            <label for="Name">Name: </label>
            <p>@Model.Name</p>
        </div>
        <div class="form-group">
            <label for="Location">Location: </label>
            <p>@Model.Location</p>
        </div>
        <div class="form-group">
            <label for="Language">Language: </label>
            <p>@Model.Language</p>
        </div>
        <div class="form-group">
            <label for="Comment">Comment: (Optional) </label>
            <textarea name="Comment" id="Comment" cols="30" rows="10" placeholder="Enter comment here." class="form-control" >@Model.Comment</textarea>
        </div>
            <a href="/"><button class="btn-primary">Go Back</button></a>
    </div>
</div>