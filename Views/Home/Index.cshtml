@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <form action="/surveySubmit" method="post">
        <div class="form-group">
            <label for="Name">Name: </label>
            <input type="text" name="Name" id="Name" class="form-control">
        </div>
        <div class="form-group">
            <label for="Location">Location: </label>
            <select name="Location" id="Location" class="form-control" >
                <option value="none" selected disabled hidden> Select a Location</option>
                <option value="San Jose">San Hose</option>
                <option value="Seattle">Seattle</option>
                <option value="Chicago">Chicago</option>
                <option value="Burbank">Burbank</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Language">Language: </label>
            <select name="Langage" id="Language" class="form-control">
                <option value="none" selected disabled hidden> Select a Language</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Comment">Comment: (Optional) </label>
            <textarea name="Comment" id="Comment" cols="30" rows="10" placeholder="Enter comment here." class="form-control" ></textarea>
        </div>
            <button type="submit" class="btn-primary">Submit</button>
    </form>
</div>
