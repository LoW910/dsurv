@model DojoSurvey.Models.User

<form asp-action="Create" asp-controller="User" method="post"  class="form-group">
    
    <div class="form-group">
        <span asp-validation-for="Username"></span>
        <label asp-for="Username" class="form-control"></label>
        <input asp-for="Username" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Email" ></span>
        <label asp-for="Email" class="form-control"></label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="Password" ></span>
        <label asp-for="Password" class="form-control"></label>
        <input asp-for="Password" class="form-control">
    </div>
    
    <input type="submit" value="Add User">

</form>